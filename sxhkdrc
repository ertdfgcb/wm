#H System Control

#H Logout
super + alt + Escape
	bspc quit

#H Reload sxhkdrc
super + Escape
	pkill -USR1 -x sxhkd


#H Window Control

#H Presel mode
super + shift + {h, j, k, l}
	bspc window -p {left, down, up, right}
	
#H Launch terminal
super + Return
	xterm

#H Run command
super + space
	ls -u -w1 /bin | grep -E "^\w" | $tools/menu.sh | bash

#H Close window
super + shift + q
	bspc window -c

#H Kill window
super + shift + w
	bspc window -k
 
#H Rotate layout
super + ctrl + {a, s, d}
	bspc desktop -R {90, 180, 270}

#H Switch desktop layouts
super + l
	bspc desktop -l next

#H Move focus around windows
super + {_, shift} + a
	bspc window -f {prev, next}

#H Spins windows through positions
super + {_, shift} + s
	bspc desktop -C {forward, backward}

#H Swap focus or posiion of this and largest window
super + (_, shift) + d
	bspc window {-f, -s} biggest

#H Swap this and last window
super + {_, shift} + f
	bspc window {-f, -s} last

#H Make this window fullscreen or floating
super + {_, shift} + o
	bspc window -t {floating, fullscreen}



#H Desktop Control

#H Go or send window to desk 1-10
super + {_, shift} + {1-9,0}
	$tools/switch_desks.sh {focus, window} ^{1-9,10}

#H Add or remove a desktop
super {_, ctrl} + q
	$tools/pager.sh {add, remove}

#H Delete empty desktops
super + {_, ctrl} + w
	$tools/controller.sh cleanup

#H Trade desks with slot 1-10
super + ctrl + {1-9,10}
	$tools/controller.sh swap {1-9,0}

#H Cycle through slots
super + {_, shift} + Tab
	$tools/switch_desks.sh focus {next, last}

#H Rename desktop
super + r
	$tools/pager.sh rename



#H Other

#H Set up apperence
super + b
	$tools/setup.sh

#H Start a countdown timer
super + c
	$tools/add_timer.sh

#H Display help
super + h
	$tools/help.sh

#H Toggle system tray
super + shift + t
	$tools/tray.sh

#H Add a line to desktop init file
super + i
	$tools/add_init.sh

#H Display window title bar
super + w
	$tools/toggle_window_title.sh

# misc

# focus follows click
^button1
	bspc pointer -g focus

# make sure we don't grab the mouse when we don't need to
super + !button(1-3)
	bspc pointer -t %i %i
 
{shift,_} + XF86AudioRaiseVolume
    $tools/volume_change.sh {1,5}

{shift,_} + XF86AudioLowerVolume
    $tools/volume_change.sh {-1,-5}

XF86AudioMute
    $tools/volume_change.sh 0

XF86MonBrightnessUp
    sudo $tools/brightness_change.sh screen up

XF86MonBrightnessDown
    sudo $tools/brightness_change.sh screen down

XF86KbdBrightnessUp
    sudo $tools/brightness_change.sh keys up

XF86KbdBrightnessDown
    sudo $tools/brightness_change.sh keys down

# make sxhkd reload its configuration files:
super + Escape
    pkill -USR1 -x sxhkd

